<br>
    <ul class="list-unstyled">
      
        <li>
            {{ form_start(delete_form) }}
                <input class='btn btn-danger' type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
<br>
         <li>
            <a href="{{ path('achadet_index') }}"><u> Retour à la liste </u></a>
        </li>
    </ul>
{% endblock %}
