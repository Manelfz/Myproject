{% extends 'template/cadreUser.html.twig' %}

{% block table %}
    <h1>Achat détail</h1>
<br>

<div class="width-entite">
    <table class="table table-info table-bordered table-sm" >
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ achadet.id }}</td>
            </tr>
            <tr>
                <th>Nom article</th>
                <td>{{ achadet.nomArticle }}</td>
            </tr>
            <tr>
                <th>Référence article</th>
                <td>{{ achadet.refArticle }}</td>
            </tr>
            <tr>
                <th>Prix achat HT</th>
                <td>{{ achadet.prixAchatHt }}</td>
            </tr>
            <tr>
                <th>Prix venteHT</th>
                <td>{{ achadet.prixVenteHt }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ achadet.quantite }}</td>
            </tr>

            <tr>
                <th>Date d'ajout</th>
                <td>{% if achadet.dateAjoutAchatdet %}{{ achadet.dateAjoutAchatdet|date('Y-m-d H:i:s') }}{% endif %}
                        </td>
            </tr>
            <tr>
                <th>Ajouté par</th>
                <td>{{ achadet.ajouteParAchatdet }}</td>
            </tr>
            <tr>
                <th>Date de mise à jour</th>
                <td>{% if achadet.dateMiseAjourAchatdet %}{{ achadet.dateMiseAjourAchatdet|date('Y-m-d H:i:s') }}{% endif %}
                                    </td>
            </tr>
            <tr>
                <th>Mis à jour par</th>
                <td>{{ achadet.misAjourParAchatdet }}</td>
            </tr>
        </tbody>
    </table>
</div>
    <ul class="list-unstyled">
        
        <li>
            {{ form_start(delete_form) }}
                <input class='btn btn-danger' type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
<br>
        <li>
            <a href="{{ path('achadet_index') }}"><u> Retour à la liste </u></a>
        </li>
    </ul>
{% endblock %}
