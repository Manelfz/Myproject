{% extends 'template/cadreUser.html.twig' %}

{% block table %}
    <h1 class='text-center'>Création d'un client</h1>
<br>
<div class="width-new">
    {{ form_start(form) }}
        {{ form_row(form.nomClient,{'attr':{'class':'form-control','placeholder':'Nom'}}) }}
        {{ form_row(form.emailClient,{'attr':{'class':'form-control','placeholder':'Email'}}) }}
        {{ form_row(form.telClient,{'attr':{'class':'form-control','placeholder':'Téléphone'}}) }}
        {{ form_row(form.adresseClient,{'attr':{'class':'form-control','placeholder':'Adresse'}}) }}
</div>

<br>
        <input class='btn btn-secondary' type="submit" value="Créer" />
    {{ form_end(form) }}
<br>
    <ul class="list-unstyled">
        <li>
            <a href="{{ path('cli_index') }}"><u> Retour à la liste </u></a>
        </li>
    </ul>
{% endblock %}
