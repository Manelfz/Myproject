{% extends 'template/cadreUser.html.twig' %}

{% block table %}
    <h1 class='text-center'>Modifier le client</h1>

<br>   
        <div>
    {{ form_start(edit_form) }}
        {{ form_row(edit_form.nomClient,{'attr':{'class':'form-control','placeholder':'Nom'}}) }}
        {{ form_row(edit_form.emailClient,{'attr':{'class':'form-control','placeholder':'Email'}}) }}
        {{ form_row(edit_form.telClient,{'attr':{'class':'form-control','placeholder':'Téléphone'}}) }}
        {{ form_row(edit_form.adresseClient,{'attr':{'class':'form-control','placeholder':'Adresse'}}) }}
</div>
<br>
        <input class='btn btn-success btn-block' type="submit" value="Valider" />
    {{ form_end(edit_form) }}
<br>
    <ul class="list-unstyled">
        <li>
            {{ form_start(delete_form) }}
                <input class='btn btn-danger btn-block' type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
<br>
        <li>
            <a href="{{ path('cli_index') }}"> <u>Retour à la liste</u> </a>
        </li>

    </ul>
{% endblock %}
