{% extends 'template/cadreUser.html.twig' %}

{% block table %}
    <h1 class='text-center'>Modifier l'article</h1>
<br>
    
       <div>
    {{ form_start(edit_form) }}
      
        {{ form_row(edit_form.refArticle,{'attr':{'class':'form-control','placeholder':'Référence article'}}) }}
        {{ form_row(edit_form.nomArticle,{'attr':{'class':'form-control','placeholder':'Nom article'}}) }}
        {{ form_row(edit_form.nomFournisseur,{'required':false,'attr':{'class':'form-control'}}) }} 
        {{ form_row(edit_form.prixAchatHtArticle,{'attr':{'class':'form-control','placeholder':'Prix achat HT'}}) }}
        {{ form_row(edit_form.quantiteArticle,{'attr':{'class':'form-control','placeholder':'Quantité'}}) }}
        {{ form_row(edit_form.prixVenteHtArticle,{'attr':{'class':'form-control','placeholder':'Prix Vente HT'}}) }}
 </div>
<br>    
        <input class='btn btn-success btn-block' type="submit" value="Valider" />
    {{ form_end(edit_form) }}
<br>
    <ul class="list-unstyled">
        <li>
            {{ form_start(delete_form) }}
                <input class='btn btn-danger btn-block' type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>

    <ul class="list-unstyled">
        <li>
            <a href="{{ path('art_index') }}"><u> Retour à la liste </u></a>
        </li>

    </ul>
{% endblock %}
