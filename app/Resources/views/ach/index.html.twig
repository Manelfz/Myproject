{% extends 'template/cadreUser.html.twig' %}

{% block table %}
    <h1 class="text-center">Liste des achats</h1>
<br>
    <table class="table table-active">
        <thead>
            <tr class="table-secondary">
                
                <th>Prix total</th>
                <th>Payement</th>
                <th>Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ach in aches %}
            <tr>
             
                <td>{{ ach.prixTotalDachats }}</td>
                <td>{{ ach.payement }}</td>
                <td>{{ ach.balance }}</td>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('ach_show', { 'id': ach.id }) }}">
<button type="button" class="btn btn-link"><u>Afficher</u></button> </a>

                        </li>
                        <li>
                            <a href="{{ path('ach_edit', { 'id': ach.id }) }}">
<button type="button" class="btn btn-link"><u>Modifier</u></button> </a>

                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a class='btn btn-primary' href="{{ path('ach_new') }}">Cr√©er un nouveau achat</a>
        </li>
    </ul>
{% endblock %}
